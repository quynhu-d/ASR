{
  "name": "quartznet_config",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {
      }
    }
  },
  "augmentations": {
    "wave": [
      {
        "type": "AddColoredNoise",
        "args": {
          "p": 0.7,
          "sample_rate": 16000,
          "min_f_decay": -2.0,
          "max_f_decay": 2.0
        }
      },
      {
        "type": "PitchShift",
        "args": {
          "p": 0.5,
          "min_transpose_semitones": -4.0,
          "max_transpose_semitones": 4.0
        }
      },
      {
        "type": "Shift",
        "args": {
          "min_shift": -0.5,
          "max_shift": 0.5,
          "rollover": "True"
        }
      }
    ],
    "spectrogram": [
      {
        "type": "TimeMasking",
        "args": {
          "time_mask_param": 10
        }
      },
      {
        "type": "FrequencyMasking",
        "args": {
          "freq_mask_param": 10
        }
      }
    ]
  },
  "arch": {
    "type": "QuartzNet",
    "args": {
      "n_feats": 128
    }
  },
  "data": {
    "train": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 60.0,
            "max_text_length": 300
          }
        }
      ]
    },
    "val": {
      "batch_size": 128,
      "num_workers": 5,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "max_audio_length": 60.0,
            "max_text_length": 300
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {}
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 100,
      "epochs": 100,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.2
    }
  },
  "trainer": {
    "epochs": 100,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 100,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "len_epoch": 100,
    "grad_norm_clip": 10
  }
}
